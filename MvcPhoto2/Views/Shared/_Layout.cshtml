<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
    
	<link href="@Url.Content("~/Content/template/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="../../Content/Photo2style.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/jquery-1.8.0.js" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/template/js/libs/modernizr-2.0-basic.min.js")"></script>
	<script>webRoot = "@Url.Content("~/Content/")";</script>
    <!--<script src="../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>-->
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
    <script src="../../Scripts/jCarousel.js" type="text/javascript"></script>
    
    








</head>

<body>
	<header id="main-header">
		
           
		<div id="header-top" class="wrapper" style="height:50px;">
			<div id="logo" style="margin:6px 0 0 -18px;">
				<a href="http://www.byu.edu/" class="byu"><img src="@Url.Content("~/Content/template/img/byu-logo.gif")" alt="BYU Logo" /></a>
                
			</div>
            <a href="@Url.Action("Index", "Home")" id="site-name-offical">University Photographers</a>
            @if (User.IsInRole("Photographer"))
            {
			<a href="/Account/Logoff" class="button_Logoff">Logoff</a>
                   
            }
            else
            {
                <a href="/Account/Logon" class="button_Logoff">logon</a>
            }

	</header>

	<div id="content" class="wrapper">
        <div class="clearfix">
       
            <div id="PhotoControls">
                    <div >
                    <text>Welcome </text>@Html.Action("GetNetId", "User")
                    
                    </div>
                    <h3>Search</h3>
                
				@using (Html.BeginForm("Search", "PhotoSearch"))
    {   
				
				    <!-- ENTER YOUR SEARCH URL under action -->
                    
                         
                            
                 <div id="search-box">                
                     <div id="search-box">
					    <input type="text" name="searchTerm" id="search" placeholder="Search Photo Shoots" />
					    <input type="image" src="@Url.Content("~/Content/template/img/search-button.png")" alt="Search" id="search-button1"/><br />
                     </div>
                     <!--<input id="photoFormBoxes" type="checkbox" name="checkbox" /><span> View photos only</span> -->
                 </div> 
                <br /><br />
                    <input id="photoFormBoxes" type="checkbox" name="checkbox" /><span> View photos only</span> <br />
         @*@Html.ActionLink("(Advanced Search)", "AdvancedSearch", "PhotoSearch", new { id="photoFormBoxes" })*@
                    	   
    
    }
                    <div id="ControlsList" >
                    @if (User.IsInRole("Admin"))
                        {
                            <h3>Admin Tools</h3>
                            <ul id="PhotoList">
                            <!--<li>@Html.ActionLink("Drop Box", "index", "dropBoxPhoto")</li>-->
                            <li>@Html.ActionLink("Manage Users", "Index", "User")</li>
                            </ul>
                        }
                    </div>
                <div id="ControlsList">
                    <h3>Photo Shoots</h3>
                    <div ><h5>@*@Html.ActionLink("(sync folders)", "index", "FolderStructure")*@</h5></div>
                    <div style="width:150px;">@Html.Action("displayfolder", "folder")</div>
                </div>
                <div id="ControlsList" >
                <h3>Selected Photo Shoots</h3>
                    <ul id="PhotoList">
                    <li>@Html.ActionLink("(Send Email)", "Email", "emailCart")</li>
                       @Html.Action("ListOfShootsAdded", "emailCart", null)
                      
                    </ul>
                    </div>
            </div>
       
            <div style="float:left; margin-left:40px; margin-top:40px;width:600px;">
                <!--<div style="text-align:center"><h1>University Photographers</h1></div>-->
		        @RenderBody()
            </div>
        </div>
	</div>

	@Html.Partial("_Footer")
	
	<!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>-->
	<script>	    !window.jQuery && document.write(unescape('%3Cscript src="@Url.Content("~/Content/template/js/libs/jquery.min.js")"%3E%3C/script%3E'))</script>
	<script src="@Url.Content("~/Content/template/js/script.js")"></script>
  
  
</body>
</html>